<!DOCTYPE html>
<html>
<head>
	<title>Arcade Warrior</title>
	<link rel='stylesheet' href='/css/bootstrap.css' />
	<link rel='stylesheet' href='/css/style.css' />
  <!-- Compiled and minified CSS -->

  <!-- Vladimirs links -->
  <link rel='stylesheet prefetch' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/css/bootstrap.css'>
  <script src="http://labs.phaser.io/build/phaser-arcade-physics.min.js"></script>
  <link rel='stylesheet' href='/css/vlad.css' />
  <!-- End of vlad's links -->

  <link rel="icon" type="image/png" href="Assets/Images/21.png" />
  <link type="text/css" rel="stylesheet" href="/css/blackjack.css" />
<!-- End of Steven's linksm-->

  <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css'>
  <link href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet'>
</head>
<body>

  <nav>
    <div class='nav-wrapper grey darken-4'>
      <a href='#'><img class='arcadeLogo' src='/img/aw_logo.png'></a>
      <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      <ul id='nav-mobile' class="right hide-on-med-and-down">
        {{#if user}}
          <li><a href='/'>DASHBOARD</a></li>
          <li><a href='/users/twitch'>TWITCH</a></li>
          <li><a href='/users/logout'>LOGOUT</a></li>
        {{else}}
          <li><a href='/users/login'>LOGIN</a></li>
          <li><a href='/users/register'>REGISTER</a></li>
        {{/if}}
      </ul>
    </div>
  </nav>

   <ul class="sidenav" id="mobile-demo">
      {{#if user}}
        <li><a href='/'>DASHBOARD</a></li>
        <li><a href='/users/twitch'>TWITCH</a></li>
        <li><a href='/users/logout'>LOGOUT</a></li>
      {{else}}
        <li><a href='/users/login'>LOGIN</a></li>
        <li><a href='/users/register'>REGISTER</a></li>
      {{/if}}
  </ul>


  <div class='row'>
    <div class='fluid col-lg-12'>
      {{#if success_msg}}
        <div class='alert alert-success'>{{success_msg}}</div>
      {{/if}}

      {{#if error_msg}}
        <div class='alert alert-danger'>{{error_msg}}</div>
      {{/if}}

      {{#if error}}
        <div class='alert alert-danger'>{{error}}</div>
      {{/if}}
      
      {{{body}}}
    </div> 
  </div>

    <!-- Compiled and minified JavaScript -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js'></script>

    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js'></script>

    <script src="/js/twitch.js"></script>
    <script src="/js/materialize.js"></script>
</body>
</html>